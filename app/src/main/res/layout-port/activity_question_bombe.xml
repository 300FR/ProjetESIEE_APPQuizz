<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">


    <FrameLayout
        android:id="@+id/bombe_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bombe_fond"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationX="0dp"
            android:translationY="0dp"
            app:srcCompat="@drawable/bomb" />

        <TextView
            android:id="@+id/bombe_timer"
            android:layout_width="94dp"
            android:layout_height="48dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="time"
            android:translationX="160dp"
            android:translationY="350dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <View
            android:id="@+id/bombe_red_wire"
            android:layout_width="28dp"
            android:layout_height="140dp"
            android:background="#FFFFFF"
            android:translationX="80dp"
            android:translationY="190dp"
            android:visibility="invisible" />

        <View
            android:id="@+id/bombe_blue_wire"
            android:layout_width="42dp"
            android:layout_height="166dp"
            android:background="#FFFFFF"
            android:translationX="300dp"
            android:translationY="190dp"
            android:visibility="invisible" />

    </FrameLayout>

    <ImageView
        android:id="@+id/bombe_couteau"
        android:layout_width="116dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/couteau" />

</androidx.constraintlayout.widget.ConstraintLayout>