<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/minuteur_layout"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:layout_margin="4dp"
        android:gravity="right"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/fond_noir" />

            <TextView
                android:id="@+id/minuteur_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="00:00"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="239dp"
        app:srcCompat="@drawable/fond_noir" />

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="202dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/music_question_seekBar"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/music_question_textView"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <TableLayout
        android:layout_width="411dp"
        android:layout_height="201dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/game_activity_button_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="A"
                android:textSize="12sp" />

            <Button
                android:id="@+id/game_activity_button_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="B"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/game_activity_button_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="C"
                android:textSize="12sp" />

            <Button
                android:id="@+id/game_activity_button_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="D"
                android:textSize="12sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>


