<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/minuteur_layout"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_margin="4dp"
                android:gravity="right"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/fond_noir" />

                    <TextView
                        android:id="@+id/minuteur_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="00:00"
                        android:textColor="#FFFFFF" />
                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="373dp"
                android:layout_height="333dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="2dp"
                app:srcCompat="@drawable/cadenas" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="128dp"
                android:layout_gravity="center_horizontal">

                <ScrollView
                    android:layout_width="71dp"
                    android:layout_height="47dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="28dp"
                    android:layout_marginEnd="311dp"
                    android:layout_marginBottom="33dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cadenas_combinaison_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </androidx.recyclerview.widget.RecyclerView>
                </ScrollView>

                <ScrollView
                    android:layout_width="76dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="119dp"
                    android:layout_marginEnd="215dp"
                    android:layout_marginBottom="33dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cadenas_combinaison_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp">

                    </androidx.recyclerview.widget.RecyclerView>
                </ScrollView>

                <ScrollView
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="217dp"
                    android:layout_marginEnd="119dp"
                    android:layout_marginBottom="33dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cadenas_combinaison_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp">

                    </androidx.recyclerview.widget.RecyclerView>
                </ScrollView>

                <ScrollView
                    android:layout_width="73dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="311dp"
                    android:layout_marginEnd="27dp"
                    android:layout_marginBottom="33dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/cadenas_combinaison_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp">

                    </androidx.recyclerview.widget.RecyclerView>
                </ScrollView>

            </RelativeLayout>

            <TextView
                android:id="@+id/cadenas_indication_text"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:gravity="center"
                android:textSize="20sp" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="513dp">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>