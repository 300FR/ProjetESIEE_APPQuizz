<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fond_bois" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/minuteur_layout"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_margin="4dp"
            android:gravity="right"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/fond_noir" />

                <TextView
                    android:id="@+id/minuteur_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="00:00"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/question_tableau"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/image_preview_tableau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:adjustViewBounds="true"
                android:maxWidth="100dp"
                android:maxHeight="120dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_launcher_foreground" />
        </LinearLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>
            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_7"
                        android:layout_width="match_parent"
