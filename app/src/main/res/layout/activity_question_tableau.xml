                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_15"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="153dp"
                    android:layout_height="109dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tableau_combinaison_16"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY">

                    </androidx.recyclerview.widget.RecyclerView>
                </FrameLayout>
            </TableRow>

        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>