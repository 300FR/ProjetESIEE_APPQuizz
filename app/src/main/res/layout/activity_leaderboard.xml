<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A1C9F4">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/leaderboard_verticallayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="139dp"
                app:srcCompat="@drawable/leaderboard" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="263dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/leaderboard_recycleview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <ImageButton
                android:id="@+id/button_leaderboard_back"
                android:layout_width="98dp"
                android:layout_height="119dp"
                android:backgroundTint="#00FFFFFF"
                app:srcCompat="@drawable/bouton_gauche" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>